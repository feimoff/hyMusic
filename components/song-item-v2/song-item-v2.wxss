/* components/song-item-v2/song-item-v2.wxss */
.item {
  display: flex;
  align-items: center;
  margin: 36rpx 0 10rpx;
}
.item .index {
  font-size: 30rpx;
  padding: 12rpx;
}
.item .info {
  flex: 1;
  margin-left: 16rpx;
}
.item .info .name {
  font-size: 30rpx;
}
.item .info .source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.item .info .source .icon {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.item .more-icon {
  font-size: 43rpx;
  color: #999;
  margin-bottom: 20rpx;
}
